<PropertyList>

 <path>lumiere-Both.ac</path> 
 <nopreview/>

	<animation>
           <type>select</type>
            <object-name>phare-faisceau-tache</object-name>
            <object-name>phare-faisceau</object-name>
           <condition>
              <and>
                <property>controls/switches/landing-light-L</property>
                <property>controls/switches/landing-light-R</property>
              </and>
           </condition>
        </animation>

        <animation>
           <name>LightVisibility</name>
           <type>material</type>
           <object-name>phare-faisceau-tache</object-name>
          <transparency>
              <alpha>0.25</alpha>
              <factor-prop>/sim/models/materials/LandingLight/factorAGL-L</factor-prop>  
           </transparency>
        </animation>

        <animation>
           <name>LightVisibility</name>
           <type>material</type>
           <object-name>phare-faisceau</object-name>
           <transparency>
              <alpha>0.1</alpha>
              <factor-prop>/sim/models/materials/LandingLight/factor-L</factor-prop>  
           </transparency>
        </animation>

        <animation>
            <type>noshadow</type>
            <object-name>phare-faisceau-tache</object-name>
        </animation>

        <animation>
            <type>noshadow</type>
            <object-name>phare-faisceau</object-name>
        </animation>
              
</PropertyList>
