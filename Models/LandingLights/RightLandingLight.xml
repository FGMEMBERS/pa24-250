<PropertyList>

 <path>lumiere-R.ac</path>
 <nopreview/>

	<animation>
           <type>select</type>
            <object-name>phare-faisceau-tache</object-name>
            <object-name>phare-faisceau</object-name>
           <condition>
              <and>
                <property>controls/switches/landing-light-R</property>
                <not>
                   <property>controls/switches/landing-light-L</property>
                </not>
              </and>
           </condition>
        </animation>

        <animation>
           <name>LightVisibility</name>
           <type>material</type>
           <object-name>phare-faisceau-tache</object-name>
           <transparency>
              <alpha>0.25</alpha>
              <factor-prop>sim/model/material/LandingLight/factorAGL-R</factor-prop>
           </transparency>
        </animation>

        <animation>
           <name>LightVisibility</name>
           <type>material</type>
           <object-name>phare</object-name>
           <transparency>
              <alpha>0.3</alpha>
              <factor-prop>sim/model/material/LandingLight/factor-R</factor-prop>
           </transparency>
        </animation>

        <animation>
           <name>LightVisibility</name>
           <type>material</type>
           <object-name>phare-faisceau</object-name>
           <transparency>
              <alpha>0.1</alpha>
              <factor-prop>sim/model/material/LandingLight/factor-R</factor-prop>
           </transparency>
        </animation>

        <animation>
            <type>noshadow</type>
            <object-name>phare-faisceau-tache</object-name>
        </animation>

        <animation>
            <type>noshadow</type>
            <object-name>phare</object-name>
        </animation>

        <animation>
            <type>noshadow</type>
            <object-name>phare-faisceau</object-name>
        </animation>

        <animation>
            <type>flash</type>
            <object-name>phare</object-name>
            <center>
                <x-m>0.0</x-m>
                <y-m>0.0</y-m>
                <z-m>0.0</z-m>
            </center>
            <axis>
                <x>-1</x>
                <y>-0.3</y>
                <z>-0.1</z>
            </axis>
            <power>5</power>
            <factor>1</factor>
            <offset>0</offset>
            <two-sides type="bool">false</two-sides>
            <min>0.01</min>
            <max>1</max>
        </animation>

</PropertyList>
