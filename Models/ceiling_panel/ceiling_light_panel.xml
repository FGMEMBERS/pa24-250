<?xml version="1.0"?>

<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<PropertyList>

 <name>ceiling-Panel</name>
 <background>Aircraft/pa24-250/Panel/transparent-bg.rgb</background>
 <w>1024</w>
 <h>768</h>

<instruments>

<instrument>
  <name>panel hotspots</name>
  <x>512</x>
  <y>384</y>
  <w>1024</w>
  <h>768</h>
  <w-base>1024</w-base>
  <h-base>768</h-base>

 <actions> 

   <action>
     <name>ToggleMapLight</name>
     <button>0</button>
     <x>-161</x>
     <y>-90</y>
     <w>16</w>
     <h>20</h>
     <binding>
       <command>nasal</command>
       <script>pa24.map_light_switch()</script>
     </binding>
   </action>
  
   <action>
     <name>ToggleCabinLight</name>
     <button>0</button>
     <x>28</x>
     <y>327</y>
     <w>40</w>
     <h>12</h>
     <binding>
       <command>nasal</command>
       <script>pa24.cabin_light_switch()</script>
     </binding>
   </action>

   <action>
     <name>Elevator Trim down</name>
     <button>0</button>
     <x>-18</x>
     <y>-270</y>
     <w>25</w>
     <h>10</h>
    <repeatable type="bool">true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>/controls/flight/elevator-trim</property>
      <step>0.00125</step>
    </binding>
  </action>

   <action>
     <name>Elevator Trim up</name>
     <button>0</button>
     <x>30</x>
     <y>-270</y>
     <w>25</w>
     <h>10</h>
     <repeatable>true</repeatable>
     <binding>
       <command>property-adjust</command>
       <property>/controls/flight/elevator-trim</property>
       <step>-0.00125</step>
     </binding>
   </action>
     
  </actions>

 </instrument>

</instruments>

</PropertyList>
